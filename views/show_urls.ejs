<style>
  .container {
    max-width: 620px;
    margin: 0 auto 2rem auto;
    padding: 0;
  }
  .url-card {
    background: #fff;
    padding: 22px 26px;
    margin: 17px 0;
    border-radius: 14px;
    box-shadow: 0 4px 16px #0001;
    display: flex;
    flex-direction: column;
    gap: 0.45rem;
    transition: box-shadow 0.2s, background 0.3s;
  }
  body.dark .url-card, .dark .url-card {
    background: #232846;
    box-shadow: 0 6px 24px #001a;
  }
  .short-url a {
    color: #2563eb;
    font-size: 1.14rem;
    font-weight: 600;
    margin-right: 1.4rem;
    text-decoration: none;
    transition: color 0.2s;
  }
  .short-url a:hover {
    color: #1d4ed8;
    text-decoration: underline;
  }
  body.dark .short-url a {
    color: #60a5fa;
  }
  .clicks {
    background: #e5e7eb;
    padding: 2px 12px;
    border-radius: 20px;
    font-size: 0.95em;
    margin-left: 0.3em;
    color: #575c67;
  }
  body.dark .clicks {
    background: #283356;
    color: #cacfe0;
  }
  .delete-btn {
    background: linear-gradient(90deg, #db2777 35%, #f43f5e 80%);
    color: #fff;
    border: none;
    padding: 6px 20px;
    border-radius: 7px;
    cursor: pointer;
    font-size: 1em;
    font-weight: 600;
    margin-left: 1em;
    transition: background 0.17s;
  }
  .delete-btn:hover { background: linear-gradient(90deg, #be185d 35%, #e11d48 80%); }
  .long-url {
    color: #64748b;
    word-break: break-all;
    font-size: 0.99em;
  }
  body.dark .long-url {
    color: #d6e1fa;
  }
  @media (max-width: 600px) {
    .container { padding: 0 6px; }
    .url-card { padding: 13px 7px; }
  }
</style>
<div class="container">
    <% urls.map((url) => { %>
        <div class="url-card">
            <div class="short-url">
                <a href="<%= url.shortLink %>" target="_blank"><%= url.shortLink %></a>
                <span class="clicks"><%= url.clicks %> clicks</span>
                <button class="delete-btn" onclick="deleteUrl('<%= url._id %>')">Delete</button>
            </div>
            <div class="long-url">
                <a href="<%= url.longLink %>" target="_blank"><%= url.longLink %></a>
            </div>
        </div>
    <% }) %>
</div>
<script>
    async function deleteUrl(id) {
        try {
            const response = await fetch(`/link/${id}`, {
                method: 'DELETE'
            });
            if (response.ok) location.reload();
        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>
